<h1><%= @team.name %>：新規スレッド作成</h1>

<%= form_with(model: [@team, @post], local: true) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "内容" %><br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "戻る", team_path(@team) %>